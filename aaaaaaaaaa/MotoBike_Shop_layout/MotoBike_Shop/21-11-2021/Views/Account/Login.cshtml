@model _21_11_2021.Models.UserLogin


<main class="login-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">Đăng nhập</div>
                    <div class="card-body">
                        <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group row">
                                <label asp-for="Email" class="col-md-4 col-form-label text-md-right">E-Mail</label>
                                <div class="col-md-6">
                                    <input asp-for="Email" id="email_address" class="form-control" required autofocus>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="MatKhau" class="col-md-4 col-form-label text-md-right">Mật khẩu</label>
                                <div class="col-md-6">
                                    <input asp-for="MatKhau" type="password" id="password" class="form-control">
                                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-6 offset-md-4">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" asp-for="NhoTK" /> @Html.DisplayNameFor(model => model.NhoTK)
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 offset-md-4">
                                <div class="form-group">
                                    <input type="submit" value="Log In" class="btn btn-primary" />
                                    <a asp-action="ForgotPassword" class="btn btn-link">
                                        Quên mật khẩu?
                                    </a>
                                </div>
                            </div>
                        </form>
                        <div class="text-center w-full p-t-42 p-b-22">
                            <span class="txt1">
                                Hoặc đăng nhập với
                            </span>
                        </div>
                        <div style="text-align:center">
                            <partial name="_ExternalAuthentication" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

