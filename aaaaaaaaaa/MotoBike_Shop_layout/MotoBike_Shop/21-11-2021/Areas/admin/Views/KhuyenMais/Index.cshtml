@model IEnumerable<_21_11_2021.Areas.admin.Models.KhuyenMai>

@{
    ViewData["Title"] = "Index";
}
<div class="wrapper">
    <!-- Main Sidebar Container -->
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Khuyến mãi</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                            <li class="breadcrumb-item active">Khuyến mãi</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">
                                    <a asp-action="Create"><i class="fas fa-plus-circle"></i></a>
                                </h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table id="example2" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Mã khuyến mãi</th>
                                            <th>Tên khuyến mãi</th>
                                            <th>Số tiền giảm</th>
                                            <th>Trang thái</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.MaKhuyenMai)</td>
                                                <td>@Html.DisplayFor(modelItem => item.TenKhuyenMai)</td>
                                                <td>@Html.DisplayFor(modelItem => item.SoTienGiam)</td>
                                                <td>@Html.DisplayFor(modelItem => item.TrangThai)</td>
                                                <td>
                                                    <div class="container-fluid">
                                                        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#flipFlop">
                                                            <a asp-action="IdShowModal" asp-route-id="@item.MaKhuyenMai" style="color:white;"> Xóa </a>
                                                        </button>
                                                        <button type="button" class="btn btn-primary btn-lg" data-dismiss="modal">
                                                            <a asp-action="Edit" asp-route-id="@item.MaKhuyenMai" style="color:white;">Sửa</a>
                                                        </button>

                                                    </div>
                                                </td>
                                            </tr>
                                            <!--Modal-->

                                            <!--End modal-->
                                            @*<a asp-action="Delete" asp-route-id="@item.MaDanhMuc">Delete</a>*@

                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</div>
