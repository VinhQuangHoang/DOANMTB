@model _21_11_2021.Models.UserRegistrationModel

<div class="hold-transition register-page">
    <div class="register-box">
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a asp-controller="Account" asp-action="Register" class="h1"><b>Register</b></a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Register a new membership</p>
                <form asp-controller="Account" asp-action="Register" method="post">
                    <div class="input-group mb-3">
                        <input asp-for="FullName" type="text" class="form-control" placeholder="Full name">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span asp-validation-for="FullName" class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span asp-validation-for="Email" class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="PhoneNumber">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span asp-validation-for="PhoneNumber" class="fas fa-phone-square"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Gender" type="text" class="form-control" placeholder="Gender">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span asp-validation-for="Gender" class="fas fa-transgender-alt"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Address" type="text" class="form-control" placeholder="Address">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span asp-validation-for="Address" class="fas fa-address-book"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span asp-validation-for="Password" class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span asp-validation-for="ConfirmPassword" class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="agreeTerms" name="terms" value="agree" required>
                                <label for="agreeTerms">
                                    I agree to the <a href="#">terms</a>
                                </label>
                            </div>
                        </div>
                        <hr>
                    </div>
                    <div class="social-auth-links text-center">
                        <a href="#" class="btn btn-block btn-primary">
                            <button type="submit" class="btn btn-primary btn-block">Register</button>
                        </a>
                    </div>
                </form>
                <a asp-action="Login" asp-controller="Account" class="text-center">I already have a membership</a>
            </div>
            <!-- /.form-box -->
        </div><!-- /.card -->
    </div>
</div>


