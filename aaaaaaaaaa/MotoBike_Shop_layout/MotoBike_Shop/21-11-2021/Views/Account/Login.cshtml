@model _21_11_2021.Models.UserLogin


<main class="login-form">
        <div class="cotainer">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">LOGIN</div>
                        <div class="card-body">
                            <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group row">
                                    <label asp-for="Email" class="col-md-4 col-form-label text-md-right">E-Mail Address</label>
                                    <div class="col-md-6">
                                        <input asp-for="Email" id="email_address" class="form-control" required autofocus>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label asp-for="Password" class="col-md-4 col-form-label text-md-right">Password</label>
                                    <div class="col-md-6">
                                        <input asp-for="Password" type="password" id="password" class="form-control">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-md-6 offset-md-4">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                                            </label>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6 offset-md-4">
                                    <div class="form-group">
                                        <input type="submit" value="Log In" class="btn btn-primary" />
                                        <a asp-action="ForgotPassword" class="btn btn-link">
                                            Forgot Your Password?
                                        </a>
                                    </div>
                                </div>
                            </form>
                            <div class="text-center w-full p-t-42 p-b-22">
                                <span class="txt1">
                                    Or login with
                                </span>
                            </div>
                            <div style="text-align:center">
                                <partial name="_ExternalAuthentication" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

